    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,ts,md}": "npm run lint:fix"
  }

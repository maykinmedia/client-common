{
  "name": "@maykin-ui/client-common",
  "version": "0.0.0",
  "description": "Common client (browser) support utilities for user interfaces",
  "license": "EUPL-1.2",
  "type": "module",
  "main": "dist/cjs/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "commitlint": "commitlint --edit",
